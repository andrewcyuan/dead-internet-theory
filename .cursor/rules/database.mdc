CREATE TABLE public.comments (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  created_at timestamp with time zone NOT NULL DEFAULT now(),
  score bigint NOT NULL DEFAULT '0'::bigint,
  body text,
  comment_replying_to uuid DEFAULT gen_random_uuid(),
  post_replying_to uuid DEFAULT gen_random_uuid(),
  author uuid DEFAULT gen_random_uuid(),
  CONSTRAINT comments_pkey PRIMARY KEY (id),
  CONSTRAINT comments_post_replying_to_fkey FOREIGN KEY (post_replying_to) REFERENCES public.posts(id),
  CONSTRAINT comments_comment_replying_to_fkey FOREIGN KEY (comment_replying_to) REFERENCES public.comments(id),
  CONSTRAINT comments_author_fkey FOREIGN KEY (author) REFERENCES public.user_profiles(id)
);
CREATE TABLE public.posts (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  created_at timestamp with time zone NOT NULL DEFAULT now(),
  score bigint NOT NULL DEFAULT '0'::bigint,
  title text,
  body text,
  author uuid NOT NULL,
  CONSTRAINT posts_pkey PRIMARY KEY (id),
  CONSTRAINT posts_author_fkey FOREIGN KEY (author) REFERENCES public.user_profiles(id)
);
CREATE TABLE public.user_profiles (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  created_at timestamp with time zone NOT NULL DEFAULT now(),
  username text NOT NULL UNIQUE,
  context text,
  CONSTRAINT user_profiles_pkey PRIMARY KEY (id)
);